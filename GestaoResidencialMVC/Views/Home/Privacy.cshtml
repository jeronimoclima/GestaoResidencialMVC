@{
    //ViewData["Title"] = "Contato";
    <h1 class="text-primary text-center">@ViewData["Title"] Contato</h1>
}
<h1>@ViewData["Title"]</h1>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-sm border-0 p-4">
                <h2 class="mb-4 text-primary">
                    <i class="bi bi-envelope-paper me-2"></i>Envie uma Mensagem
                </h2>

                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Seu Nome</label>
                            <input type="text" class="form-control border-0 bg-light" placeholder="Ex: João Silva">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">E-mail</label>
                            <input type="email" class="form-control border-0 bg-light" placeholder="email@exemplo.com">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Assunto</label>
                        <select class="form-select border-0 bg-light">
                            <option selected>Dúvida sobre o Dashboard</option>
                            <option value="1">Sugestão de Funcionalidade</option>
                            <option value="2">Relatar Erro (Bug)</option>
                            <option value="3">Outros</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mensagem</label>
                        <textarea class="form-control border-0 bg-light" rows="5" placeholder="Como podemos ajudar?"></textarea>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-send me-2"></i>Enviar Mensagem
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="ps-lg-4">
                <h3 class="mb-4">Informações</h3>

                <div class="d-flex mb-4">
                    <div class="icon-box bg-primary text-white rounded p-3 me-3">
                        <i class="bi bi-geo-alt fs-4"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 fw-bold">Localização</h6>
                        <p class="text-muted">Natal, RN - Brasil</p>
                    </div>
                </div>

                <div class="d-flex mb-4">
                    <div class="icon-box bg-success text-white rounded p-3 me-3">
                        <i class="bi bi-whatsapp fs-4"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 fw-bold">WhatsApp</h6>
                        <p class="text-muted">(74) 999202684</p>
                    </div>
                </div>

                <div class="d-flex mb-4">
                    <div class="icon-box bg-info text-white rounded p-3 me-3">
                        <i class="bi bi-linkedin fs-4"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 fw-bold">LinkedIn</h6>
                        <p class="text-muted"> <a href="">https://www.linkedin.com/in/jeronimoclramos/</a> </p>
                    </div>
                </div>

                <hr>

                <div class="alert alert-light border-0 shadow-sm mt-4">
                    <i class="bi bi-clock me-2 text-warning"></i>
                    <strong>Atendimento:</strong><br>
                    <small class="text-muted">Segunda a Sexta, das 08h às 18h</small>
                </div>
            </div>
        </div>
    </div>
</div>
